/* pages/center/center.wxss */
.header{
  width:100%;
  height: 180px;
  float: left;
}
.info{
  width: 80%;
  float: left;
  margin-top: -120px;
  margin-left: 20px;
}
.info image{
  width:80px;
  height: 80px;
  border-radius: 44px;
}
.info text{
  float: right;
  color: white;
  margin: 14px  46% 0 2%;
}
.bannel{
  width: 100%;
  height:40px;
  font-size: 15px;
  line-height: 40px;
  float: left;
  border-bottom: 1px solid silver;
}
.bannel-left{
  margin-left: 16px;
}
.bannel-center{
  color:red;
  margin-left:6px;
}
.bannel-right{
  float: right;
  color: silver;
  margin-right: 10px;
  font-weight: 800;
}

.image{
  float: left;
  width: 100%;
  text-align: center;
}
.image view{
  float: left;
  width: 20%;
  height: 60px;
  margin:6px 0 6px 0;
  text-align: center;
}
.image view cover-view{
  font-size: 14px;
  color: red;
  float: right;
  z-index: 999;
  margin-left: -20px;
  width: 20px;
  height: 20px;
  border: 1px solid red;
  border-radius: 25px;
}
.image view image{
  width: 40px;
  height: 40px;
}
.image view text{
  width: 100%;
  float: left;
  font-size: 14px;
}
.sing-image{
  height: 60px;
  width: 90%;
  margin: 6px 0 0 5%;
  border-radius: 8px;
}
.line{
  width: 100%;
  height: 10px;
  background: rgb(233, 233, 233);
}
.serve{
  float: left;
  width: 100%;
  text-align: center;
}
.serve view{
  float: left;
  width: 25%;
  height: 60px;
  margin:6px 0 6px 0;
  text-align: center;
}
.serve view image{
  width: 40px;
  height: 40px;
}
.serve view text{
  width: 100%;
  float: left;
  font-size: 14px;
}
.per{
  float: left;
  width: 100%;
  border-bottom:1px solid silver;
  margin-top:6px;
}
