/* pages/center/center.wxss */
.header{
  width:100%;
  height: 180px;
  float: left;
}
.info{
  width: 80%;
  float: left;
  margin-top: -120px;
  margin-left: 20px;
}
.info image{
  width:80px;
  height: 80px;
  border-radius: 44px;
}
.info text{
  float: right;
  color: white;
  margin: 14px  46% 0 2%;
}
.bannel{
  width: 100%;
  height:40px;
  font-size: 15px;
  line-height: 40px;
  float: left;
  border-bottom: 1px solid silver;
}
.bannel-left{
  margin-left: 16px;
}
.bannel-right{
  float: right;
  color: silver;
  margin-right: 10px;
  font-weight: 800;
}

.image image{
  display: block;
  float: left;
  width: 67px;
  height: 58px;
  padding: 4px;
}
.sing-image{
  height: 60px;
  width: 90%;
  margin: 6px 0 0 5%;
  border-radius: 16px;
}
.line{
  width: 100%;
  height: 10px;
  background: rgb(233, 233, 233);
}
.serve{
  float: left;
  width: 100%;
  text-align: center;
}
.serve view{
  float: left;
  width: 85px;
  height: 60px;
  padding: 4px;
  text-align: center;
}
.serve view image{
  width: 40px;
  height: 40px;
}
.serve view text{
  width: 85px;
  float: left;
  font-size: 14px;
}
.per{
  float: left;
  width: 100%;
  border-bottom:1px solid silver;
  margin-top:6px;
}
